        <servlet-name>ControladorHabitacionesVista</servlet-name>
        <servlet-class>Controlador.ControladorHabitacionesVista</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorReservas</servlet-name>
        <servlet-class>Controlador.ControladorReservas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAgregarReservas</servlet-name>
        <servlet-class>Controlador.ControladorAgregarReservas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorAdmin</servlet-name>
        <servlet-class>Controlador.ControladorAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Persona</servlet-name>
        <url-pattern>/Persona</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controlador</servlet-name>
        <url-pattern>/Controlador</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorUsuarios</servlet-name>
        <url-pattern>/ControladorUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAgregarUsuarios</servlet-name>
        <url-pattern>/ControladorAgregarUsuarios</url-pattern>
