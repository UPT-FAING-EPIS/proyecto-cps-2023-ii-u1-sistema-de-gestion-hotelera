        <servlet-name>ControladorHabitaciones</servlet-name>
        <url-pattern>/ControladorHabitaciones</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorHabitacionesVista</servlet-name>
        <url-pattern>/ControladorHabitacionesVista</url-pattern>
