        <servlet-name>ControladorReservas</servlet-name>
        <url-pattern>/ControladorReservas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAgregarReservas</servlet-name>
        <url-pattern>/ControladorAgregarReservas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorAdmin</servlet-name>
        <url-pattern>/ControladorAdmin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
